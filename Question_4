#include<iostream>
using namespace std;
int main() {
    int age;
    cout<<"Enter the age of person";
    cin>>age;
    if (age<12)
    {
        cout<<"The person is a child";
    }
    else if (age<20)
    {
        cout<<"The person is a teenager";
    }
    else if (age<60)
    {
        cout<<"The person is an adult";
    }
    else
    {
        cout<<"The person is a senior citizen";
    }
    return 0;
}
